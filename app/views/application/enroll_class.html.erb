<% content_for :main do %>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Enroll for a Class</h1>
      <hr>
      <form>
        <div class="form-group">
          <label for="signUpFirstname">First Name</label>
          <input type="text" class="form-control" id="signUpFirstname" placeholder="First Name">
        </div>
        <div class="form-group">
          <label for="signUpLastname">Last Name</label>
          <input type="text" class="form-control" id="signUpLastname" placeholder="First Name">
        </div>
        <div class="form-group">
          <label for="enrollMonth">Month</label>
          <input type="month" class="form-control" id="enrollMonth">
        </div>
      	<div class="form-group">
      		<label for="enrollCourse" class="control-label">Course Selector</label>
      		<select class="form-control" id="enrollCourse">
      		  <option value="cpr_aed">CPR - $30</option>
      			<option value="cpr_aed">CPR and AED - $500</option>
      			<option value="cpr_aed">CPR and First Aid - $50</option>
      			<option value="first_aid">First Aid - $20</option>
      			<option value="asthma">Asthma Training - $1000</option>
      			<option value="mildly_ill_child">Mildly Ill Child - $10</option>
      		</select>					
      	</div>
        <button type="submit" class="btn btn-primary">Checkout</button>
      </form>
    </div>
    <div class="col-md-3"></div>
  </div>
<% end %>